<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        tools:context="com.elisoft.kache_conductor.animacion.login_inicio.login.InicioAnimacion">

        <com.elisoft.kache_conductor.animacion.login_inicio.login.FlexibleFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wrapper"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:id="@+id/sign_up_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.elisoft.kache_conductor.animacion.login_inicio.login.login.LoginButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="switchFragment" />

            <FrameLayout
                android:id="@+id/login_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.elisoft.kache_conductor.animacion.login_inicio.login.FlexibleFrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
